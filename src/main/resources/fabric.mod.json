{
  "schemaVersion": 1,
  "id": "tlodmod",
  "version": "${version}",

  "name": "Texture LOD Mod",
  "description": "The Texture LOD Mod loweres the texture size of every block depending on the distance the block is from the player to improve performance and allow larger render distances.",
  "authors": [
    "Bittle"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT License",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.bittle.tlodmod.TLODMod"
    ],
    "client": [
      "net.bittle.tlodmod.TLODModClient"
    ]
  },
  "mixins": [
    "tlodmod.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
